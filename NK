-- Creating ScreenGui for Executor
local gui = Instance.new("ScreenGui")
gui.Name = "MigExcV1"
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
gui.ResetOnSpawn = false

-- Variables for customizable theme
local theme = {
    backgroundColor = Color3.fromRGB(25, 25, 25),
    textColor = Color3.fromRGB(255, 255, 255),
    buttonColor = Color3.fromRGB(45, 45, 45),
    textBoxColor = Color3.fromRGB(35, 35, 35)
}

-- Creating the main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Parent = gui
mainFrame.Size = UDim2.new(0, 400, 0, 300)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
mainFrame.BackgroundColor3 = theme.backgroundColor
mainFrame.BorderSizePixel = 0
mainFrame.Visible = true -- Make visible for testing

-- Creating the title
local title = Instance.new("TextLabel")
title.Name = "Title"
title.Parent = mainFrame
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 0)
title.Text = "Mig Exc V1"
title.Font = Enum.Font.SourceSansBold
title.TextSize = 24
title.TextColor3 = theme.textColor
title.BackgroundTransparency = 1

-- Textbox for scripts
local scriptBox = Instance.new("TextBox")
scriptBox.Name = "ScriptBox"
scriptBox.Parent = mainFrame
scriptBox.Size = UDim2.new(0.95, 0, 0.5, 0)
scriptBox.Position = UDim2.new(0.025, 0, 0.25, 0)
scriptBox.MultiLine = true
scriptBox.Font = Enum.Font.Code
scriptBox.TextSize = 18
scriptBox.TextColor3 = theme.textColor
scriptBox.BackgroundColor3 = theme.textBoxColor
scriptBox.ClearTextOnFocus = false

-- Execution button
local executeButton = Instance.new("TextButton")
executeButton.Name = "ExecuteButton"
executeButton.Parent = mainFrame
executeButton.Size = UDim2.new(0.4, 0, 0.1, 0)
executeButton.Position = UDim2.new(0.05, 0, 0.85, 0)
executeButton.Text = "Execute"
executeButton.Font = Enum.Font.SourceSansBold
executeButton.TextSize = 20
executeButton.TextColor3 = theme.textColor
executeButton.BackgroundColor3 = theme.buttonColor

executeButton.MouseButton1Click:Connect(function()
    local scriptCode = scriptBox.Text
    if scriptCode and scriptCode ~= "" then
        local success, errorMessage = pcall(function()
            loadstring(scriptCode)()
        end)

        if not success then
            warn("Error executing script: " .. errorMessage)
        else
            print("Script executed successfully.")
        end
    else
        warn("No script provided.")
    end
end)

-- Adding a clear button
local clearScriptButton = Instance.new("TextButton")
clearScriptButton.Name = "ClearScriptButton"
clearScriptButton.Parent = mainFrame
clearScriptButton.Size = UDim2.new(0.4, 0, 0.1, 0)
clearScriptButton.Position = UDim2.new(0.55, 0, 0.85, 0)
clearScriptButton.Text = "Clear Script"
clearScriptButton.Font = Enum.Font.SourceSansBold
clearScriptButton.TextSize = 20
clearScriptButton.TextColor3 = theme.textColor
clearScriptButton.BackgroundColor3 = theme.buttonColor

clearScriptButton.MouseButton1Click:Connect(function()
    scriptBox.Text = ""
    print("Script box cleared.")
end)

-- Show the GUI
gui.Enabled = true
